<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:orientation="vertical">

    <com.huibin.androidsegmentcontrol.SegmentControl
        xmlns:segmentcontrol="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        segmentcontrol:texts="label1"
        segmentcontrol:colors="#e00032"
        segmentcontrol:cornerRadius="5dip"
        segmentcontrol:direction="horizon"
        segmentcontrol:verticalGap="8dip"
        segmentcontrol:horizonGap="8dip"
        segmentcontrol:selectedIndex="0"/>

    <com.huibin.androidsegmentcontrol.SegmentControl
        xmlns:segmentcontrol="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        segmentcontrol:texts="label1|label2"
        segmentcontrol:colors="#009688"
        segmentcontrol:cornerRadius="5dip"
        segmentcontrol:direction="horizon"
        segmentcontrol:verticalGap="8dip"
        segmentcontrol:horizonGap="8dip"
        segmentcontrol:selectedIndex="1"
        android:layout_marginTop="10dp"/>

    <com.huibin.androidsegmentcontrol.SegmentControl
        xmlns:segmentcontrol="http://schemas.android.com/apk/res-auto"
        android:id="@+id/segment_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        segmentcontrol:texts="未签到|全部|已签到"
        segmentcontrol:colors="#e00032"
        segmentcontrol:cornerRadius="5dip"
        segmentcontrol:direction="horizon"
        segmentcontrol:verticalGap="8dip"
        segmentcontrol:horizonGap="8dip"
        segmentcontrol:selectedIndex="1"
        android:layout_marginTop="10dp"/>

    <com.huibin.androidsegmentcontrol.SegmentControl
        xmlns:segmentcontrol="http://schemas.android.com/apk/res-auto"
        android:id="@+id/segment_control2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        segmentcontrol:texts="label1|label2|label3|label4"
        segmentcontrol:colors="#5777fc"
        segmentcontrol:cornerRadius="5dip"
        segmentcontrol:direction="horizon"
        segmentcontrol:verticalGap="8dip"
        segmentcontrol:horizonGap="8dip"
        segmentcontrol:selectedIndex="0"
        android:layout_marginTop="10dp"/>

    <com.huibin.androidsegmentcontrol.SegmentControl
        xmlns:segmentcontrol="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        segmentcontrol:texts="未签到|全部|已签到"
        segmentcontrol:colors="#cddc39"
        segmentcontrol:cornerRadius="5dip"
        segmentcontrol:direction="vertical"
        segmentcontrol:verticalGap="8dip"
        segmentcontrol:horizonGap="8dip"
        segmentcontrol:selectedIndex="1"
        android:layout_marginTop="10dp"/>
</LinearLayout>
